{
  "name": "web-time-tracker",
  "version": "1.0.0",
  "description": "Firefox extension to track time spent on different domains",
  "main": "dist/background.js",
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint {src,tests}/**/*.ts",
    "lint:fix": "eslint {src,tests}/**/*.ts --fix",
    "clean": "rimraf build dist",
    "package": "web-ext build --source-dir dist",
    "dev": "concurrently \"npm run watch\" \"web-ext run --source-dir dist --reload\""
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/sinon-chrome": "^2.2.16",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.32.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "mini-css-extract-plugin": "^2.9.2",
    "rimraf": "^6.0.1",
    "sinon": "^21.0.0",
    "sinon-chrome": "^3.0.1",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "web-ext": "^8.9.0",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@types/(.*)$": "<rootDir>/types/$1"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "es2020": true,
      "webextensions": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "error"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JayDosunmu/web-time-tracker.git"
  },
  "keywords": [
    "firefox",
    "extension",
    "time-tracking",
    "productivity",
    "typescript"
  ],
  "author": "Taslim Dosunmu",
  "license": "MIT"
}
